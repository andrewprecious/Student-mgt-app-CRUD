<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/nav') %>
    <div class="fetchStudents">
      <% if (allStudents.length > 0) { %>

      <table class="getUser">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>School</th>
          <th>Age</th>
          <th>Class</th>
          <th>Functions</th>
          <th>Images</th>
        </tr>
        <% allStudents.forEach(students => { %>
        <tr>
          <td><%= students.name %></td>
          <td><%= students.email %></td>
          <td><%= students.school %></td>
          <td><%= students.age %></td>
          <td><%= students.class %></td>

          <td class="actions">
            <a href="/editStudent/<%= students._id %>"
              ><i class="bi bi-pen-fill"></i
            ></a>
            <a href="/student/<%= students._id %>"
              ><i class="bi bi-book-fill"></i
            ></a>
            <form
              action="/deleteStudents/<%= students._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn1">
                <i class="bi bi-trash3"></i>
              </button>
            </form>
          </td>
          <td>
            <img
              src="<%= students.image %>"
              alt="<%= students.image %>"
              width="40px"
              height="40px"
            />
          </td>
        </tr>
        <% }) %>
      </table>
      <% } else {%>
      <h1>No students</h1>
      <%}%>
    </div>
  </body>
</html>
